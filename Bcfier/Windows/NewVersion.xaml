<Window x:Class="Bcfier.Windows.NewVersion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="A new BCFier is available!" SizeToContent="WidthAndHeight" MinWidth="300">
  <Grid Margin="10">
    <Grid.RowDefinitions>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="1*"/>

    </Grid.RowDefinitions>

    <TextBlock Name="Description" Margin="5"/>
<StackPanel Orientation="Vertical" Grid.Row="1">
  <Label Content="New Features:" FontWeight="Bold"/>
      <TextBlock TextWrapping="Wrap" Name="NewFeatures" Margin="5,0,5,5"/>
      <Label Content="Bug Fixes:" FontWeight="Bold"/>
      <TextBlock TextWrapping="Wrap" Name="BugFixes" Margin="5,0,5,5"/>
    </StackPanel>

    <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" Margin="5,15,5,5" >
      <Button Content="Yes" IsDefault="True"  Margin="5" Width="75" Click="Button_OK" />
      <Button Content="Maybe later"   Margin="5" Width="75" Click="Button_Cancel" Background="Transparent" BorderBrush="Transparent"/>
    </StackPanel>
  </Grid>
</Window>
